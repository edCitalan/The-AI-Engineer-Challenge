{
    "version": 2,
    "builds": [
      { "src": "frontend-app/package.json", "use": "@vercel/next" },
      { 
        "src": "api/app.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      { 
        "src": "/api/(.*)", 
        "dest": "api/app.py"
      },
      { 
        "src": "/(.*)", 
        "dest": "frontend-app/$1"
      }
    ],
    "buildCommand": "npm run build",
    "outputDirectory": ".next",
    "framework": "nextjs",
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/"
      }
    ]
  } 